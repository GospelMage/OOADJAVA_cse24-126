<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" spacing="20" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="LoginController">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <children>
      <Text strokeType="OUTSIDE" strokeWidth="0.0" text="BANKING SYSTEM" />
      <VBox alignment="CENTER_LEFT" spacing="10">
         <children>
            <Label text="Username:" />
            <TextField fx:id="usernameField" promptText="Enter username" />
            <Label text="Password:" />
            <PasswordField fx:id="passwordField" promptText="Enter password" />
            <Button fx:id="loginButton" mnemonicParsing="false" text="LOGIN" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-pref-width: 200px;" />
            <Label fx:id="messageLabel" textFill="RED" />
         </children>
      </VBox>
      <Separator prefWidth="200.0" />
      <VBox alignment="CENTER" spacing="10">
         <Label text="New Customer? Register Now:" style="-fx-font-weight: bold;" />
         <HBox alignment="CENTER" spacing="20">
            <Button fx:id="registerPersonalButton" mnemonicParsing="false" text="Personal Account" style="-fx-background-color: #27ae60; -fx-text-fill: white;" />
            <Button fx:id="registerCompanyButton" mnemonicParsing="false" text="Company Account" style="-fx-background-color: #2980b9; -fx-text-fill: white;" />
         </HBox>
      </VBox>
   </children>
</VBox>